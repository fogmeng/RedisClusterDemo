<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<context:component-scan base-package="com.test" />

	<!--加载配置文件 -->
	<bean id="zooKeeperConfig" class="com.test.redis.config.ZooKeeperConfig" init-method="init">
		<property name="nameSpace" value="cfg/redis" />
		<property name="sleepTimes" value="3000" />
		<property name="maxRetries" value="3" />
		<property name="connectString" value="10.25.23.113:2181,10.25.23.114:2181,10.25.23.115:2181" />
		<property name="path" value="/properties" />
	</bean>
	
	<bean id="jedisClusterUtils" class="com.test.redis.cluster.JedisClusterUtils" init-method="init"/>

</beans>